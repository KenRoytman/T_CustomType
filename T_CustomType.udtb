create or replace type body TCustomType
is

  static function CreateType( className in varchar2, value in number )
    return TCustomType is

    obj TCustomType;
  begin
    execute immediate
      'begin
              :0 := new T'||className||'( :1 );
      end;'
      using OUT obj, IN value;
      
    return( obj );
  end;

  static function CreateType( className in varchar2, value in date )
    return TCustomType is
    obj TCustomType;
  begin
    execute immediate
    'begin
            :0 := new T'||className||'( :1 );
    end;'
    using OUT obj, IN value;

    return( obj );
  end;

  static function CreateType( className in varchar2, value in varchar2 )
